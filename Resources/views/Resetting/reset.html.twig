{% extends "AppWebBundle::page_layout.html.twig" %}

{% block app_content_main %}

{% trans_default_domain 'FOSUserBundle' %}
<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" id="reset_form">
        {{ form_widget(form) }}
    
        <div class="form-group">
            <div class="col-xs-offset-3 col-xs-9">
                <button type="submit" class="btn btn-primary">{{ 'resetting.reset.submit'|trans }}</button>
            </div>
        </div>
</form>

<script type="text/javascript">
$(function(){
    new FormValidator('#reset_form');
});
</script>

{% endblock %}
