{% extends "SymfonyUserBundle::page_layout.html.twig" %}

{% block sf_content_main %}

{% trans_default_domain 'FOSUserBundle' %}

<form {{ form_enctype(form) }} method="POST" class="form-horizontal" id="reset_form">
        {{ form_widget(form) }}
    
        <div class="form-group">
            <div class="col-xs-offset-3 col-xs-9">
                <button type="submit" class="btn btn-primary">{{ 'resetting.request.submit'|trans }}</button>
            </div>
        </div>
</form>
<script type="text/javascript">
$(function(){
    new SymforceFormValidator('#reset_form');
});
</script>

{% endblock %}
