{% extends "SymfonyUserBundle::page_layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block sf_content_main %}
<style>
    .form_inline_help {
        color: #777777;
        display: inline-block;
        padding: 0 12px;
    }
    .login_box{
        background: url('/bundles/appweb/images/reg/reg_bg.gif') repeat-y right;
    }
    .login_box .form_box{
        background: url('/bundles/appweb/images/reg/reg_img.gif') no-repeat right bottom;
        border-bottom:1px solid #f4f4ec;
        padding:5px 0 80px 0;
        height: 510px;
    }
    .form-group {
        margin-bottom: 20px;
    }
</style>
<div class="login_box">
    <div class="form_box">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" id="login_form" >
            {{ form_widget(form) }}
            <div class="form-group">
                <div class="col-xs-offset-3 col-xs-9">
                    <input type="submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary" />
                </div>
            </div>

        </form>
        <script type="text/javascript">
            $(function() {
                new SymforceFormValidator('#login_form', {
                    'url': '{{ path('fos_user_security_login') }}',
                    'elements': '.captcha_input input'
                });
            });
        </script>
    </div>
</div>

{% endblock %}
